    <title>AddNL</title>
</head>
<body>
    @using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div style="background-color: #DAB88B; margin: 0 auto; width: 1000px; border-radius: 30px;">
            <h1 style="color: white; font-weight: bold; font-family: 'Times New Roman'; text-align: center">THÊM NGUYÊN LIỆU</h1>
            <div>
                <hr />
                <div style="margin-left:20px;">
                    @Html.ValidationSummary(true)

