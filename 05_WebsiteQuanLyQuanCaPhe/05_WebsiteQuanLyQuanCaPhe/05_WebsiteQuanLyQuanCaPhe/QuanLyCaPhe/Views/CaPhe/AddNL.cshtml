                            @Html.LabelFor(model => model.MaNL, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.MaNL)
                                @Html.ValidationMessageFor(model => model.MaNL)
                            </div>
                        </div>*@

                    <div class="form-group">
                        <h3 style="font-family:'Times New Roman'">Tên nguyên liệu</h3>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.TenNL)
                            @Html.ValidationMessageFor(model => model.TenNL)
                        </div>
                    </div>

                    <div class="form-group">
                        <h3 style="font-family:'Times New Roman'">Số lượng còn</h3>

                        <div class="col-md-10">
                            @Html.EditorFor(model => model.SoLuongCon)
                            @Html.ValidationMessageFor(model => model.SoLuongCon)
                        </div>
                    </div>

                    <div class="form-group">
                        <h3 style="font-family:'Times New Roman'">Đơn vị tính</h3>

                        <div class="col-md-10">
                            @Html.EditorFor(model => model.DVT)
