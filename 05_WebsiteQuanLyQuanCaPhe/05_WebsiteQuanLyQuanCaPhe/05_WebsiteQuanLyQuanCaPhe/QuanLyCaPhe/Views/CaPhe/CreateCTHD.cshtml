@model QuanLyCaPhe.Models.CHITIETHD

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CreateCTHD</title>
</head>
<body>
    @using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div style="background-color: #DAB88B; margin: 0 auto; width: 1000px; border-radius: 30px;">
            <h1 style="color: white; font-weight: bold; font-family: 'Times New Roman'; text-align: center">TẠO CHI TIẾT HÓA ĐƠN</h1>
            <div>
                <hr />
                <div style="margin-left:20px;">
                    @Html.ValidationSummary(true)

                    <div class="form-group">
                        <h3 style="font-family:'Times New Roman'">Mã sản phẩm</h3>
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.MASP, new List<SelectListItem> { new SelectListItem { Text = "Cà phê đen", Value = "1", Selected = true },
                                new SelectListItem { Text = "Cà phê sữa", Value = "2" } ,new SelectListItem { Text = "Sữa tươi cà phê", Value = "3" },
                                new SelectListItem { Text = "Cà phê sữa Hazelnut", Value = "4" } ,new SelectListItem { Text = "Cà phê đá xay Frappuchino", Value = "5" },
                                new SelectListItem { Text = "Cà phê Capuchino", Value = "6" } ,new SelectListItem { Text = "Trà sữa truyền thống", Value = "7" },
                                new SelectListItem { Text = "Trà sữa thái xanh", Value = "8" } ,new SelectListItem { Text = "Trà sữa thái đỏ", Value = "9" },
                                new SelectListItem { Text = "Trà sữa ô long", Value = "10" } ,new SelectListItem { Text = "Bánh mì ốp la", Value = "11" },
                                new SelectListItem { Text = "Bánh mì xíu mại", Value = "12" } ,new SelectListItem { Text = "Bánh donut", Value = "13"},
                                new SelectListItem { Text = "Bánh sữa dừa", Value = "14" } ,new SelectListItem { Text = "Bông lan trứng muối", Value = "15" },
                                new SelectListItem { Text = "Bánh lava trà xanh", Value = "16" } ,new SelectListItem { Text = "Bánh cookie chocomint", Value = "17" }})
                                @Html.ValidationMessageFor(model => model.MASP)

                        </div>


                        <div class="form-group">
                            <h3 style="font-family:'Times New Roman'">Mã hóa đơn</h3>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.MAHD)
                                @Html.ValidationMessageFor(model => model.MAHD)
                            </div>
                        </div>

                        <div class="form-group">
                            <h3 style="font-family:'Times New Roman'">Số lượng</h3>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.SOLUONG)
                                @Html.ValidationMessageFor(model => model.SOLUONG)
                            </div>
                        </div>

                        <div class="form-group">
                            <h3 style="font-family:'Times New Roman'">Thành tiền</h3>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.THANHTIEN)
                                @Html.ValidationMessageFor(model => model.THANHTIEN)
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Create" class="btn btn-default" />
                                @Html.ActionLink("Quay lại", "HoaDon")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    }
</body>
</html>
