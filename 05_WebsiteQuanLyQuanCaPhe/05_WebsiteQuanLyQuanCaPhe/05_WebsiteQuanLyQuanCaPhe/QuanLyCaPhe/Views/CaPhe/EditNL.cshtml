@model QuanLyCaPhe.Models.NGUYENLIEU

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditNL</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            <div style="background-color: #DAB88B; margin: 0 auto; width: 1000px; border-radius: 30px;">
                <h1 style="color: white; font-weight: bold; text-align: center; font-family: 'Times New Roman'; ">CẬP NHẬT NGUYÊN LIỆU</h1>
                <div>
                    <hr />
                    <div style="margin-left: 20px">
                        @Html.ValidationSummary(true)
                        <div class="form-group">
                            <h4 style="font-family:'Times New Roman'">Mã nguyên liệu</h4>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.MaNL)
                                @Html.ValidationMessageFor(model => model.MaNL)
                            </div>
                        </div>

                        <div class="form-group">
                            <h4 style="font-family:'Times New Roman'">Tên nguyên liệu</h4>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.TenNL)
                                @Html.ValidationMessageFor(model => model.TenNL)
                            </div>
                        </div>

                        <div class="form-group">
                            <h4 style="font-family:'Times New Roman'">Số lượng còn</h4>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.SoLuongCon)
                                @Html.ValidationMessageFor(model => model.SoLuongCon)
                            </div>
                        </div>

                        <div class="form-group">
                            <h4 style="font-family:'Times New Roman'">Đơn vị tính</h4>

                            <div class="col-md-10">
                                @Html.EditorFor(model => model.DVT)
                                @Html.ValidationMessageFor(model => model.DVT)
                            </div>
                        </div>

                        <div class="form-group">
                            <h4 style="font-family:'Times New Roman'">Đơn giá</h4>

                            <div class="col-md-10">
                                @Html.EditorFor(model => model.DonGia)
                                @Html.ValidationMessageFor(model => model.DonGia)
                            </div>
                        </div>

                        <div class="form-group">
                            <h4 style="font-family:'Times New Roman'">Hạn sử dụng</h4>

                            <div class="col-md-10">
                                <input type="date" id="HANSD" name="HANSD">
                                @Html.ValidationMessageFor(model => model.HanSD)
                            </div>
                        </div>

                        <center>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Cập nhật nguyên liệu" class="btn btn-default" />
                                    @Html.ActionLink("Quay lại", "ShowAllNL")

                                </div>
                            </div>
                        </center>
                    </div>
                </div>
            </div>
        </div>
    }
</body>
</html>
