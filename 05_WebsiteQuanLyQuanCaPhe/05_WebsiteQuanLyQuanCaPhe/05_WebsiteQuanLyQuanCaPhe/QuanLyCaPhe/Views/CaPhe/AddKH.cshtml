@model QuanLyCaPhe.Models.KHACHHANG

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>THÊM MỚI KHÁCH HÀNG</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div style="background-color: #DAB88B; margin: 0 auto; width: 1000px; border-radius: 30px;">
            <h1 style="color: white; font-weight: bold; font-family: 'Times New Roman'; text-align: center">TẠO MỚI KHÁCH HÀNG</h1>
            <div>
                <hr />
                <div style="margin-left:20px;">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @*<div class="form-group">
                        @Html.LabelFor(model => model.MAKH, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.MAKH, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MAKH, "", new { @class = "text-danger" })
                        </div>
                    </div>*@

                    <div class="form-group">
                        <h3 style="font-family:'Times New Roman'">Tên khách hàng</h3>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.TENNKH, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TENNKH, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <h3 style="font-family:'Times New Roman'">Giới tính</h3>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.PHAI, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.PHAI, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <h3 style="font-family:'Times New Roman'">Sđt</h3>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.SDTKH, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.SDTKH, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <h3 style="font-family:'Times New Roman'">Tên tài khoản</h3>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.TENTAIKHOAN, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TENTAIKHOAN, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <h3 style="font-family:'Times New Roman'">Mật khẩu tài khoản</h3>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.MATKHAUTK, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MATKHAUTK, "", new { @class = "text-danger" })
                            @*<input type="password" value="PASSWORK" class="btn btn-default" />*@
                        </div>
                    </div>

                    <div class="form-group">
                        <h3 style="font-family:'Times New Roman'">Địa chỉ</h3>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.DIACHIKH, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.DIACHIKH, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <h3 style="font-family:'Times New Roman'">Email</h3>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.EMAIL, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.EMAIL, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <center>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Thêm khách hàng" class="btn btn-default" />
                            @Html.ActionLink("Quay lại", "ShowAllKH")
                        </div>
                    </div>
                    </center>

                </div>
            </div>
        </div>
    </div>
    }
</body>
</html>
