
@{
    ViewBag.Title = "TabTongQuan";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div>
    <h2>HÓA ĐƠN</h2>
    <canvas style="width: 100px; height:50px" id="myChart"></canvas>
    <a>Tổng số nhân viên: @ViewBag.NV</a>
    <a>Tổng số hóa đơn: @ViewBag.HD</a>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>

<script>
    var ctx = document.getElementById('myChart').getContext('2d');
    var chart = new Chart(ctx, {
        // The type of chart we want to create
        type: 'bar',

        // The data for our dataset
        data: {
            labels: ['Tháng 07', 'Tháng 08', 'Tháng 09', 'Tháng 10', 'Tháng 11', 'Tháng 12'],
            datasets: [{
                label: 'Hóa đơn',
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1,
                data: [1, 3, 4, 2, 3, 2]
            }]
        },

        // Configuration options go here
        options: {} 
    });
</script>



